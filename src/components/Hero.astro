---
const personalImageAlt = "Luisa Triana"
import Badge from "@/components/Badge.astro"
import LinkedInIcon from "@/components/icons/LinkedIn.astro"
import MailIcon from "@/components/icons/Mail.astro"
import GitHubIcon from "@/components/icons/GitHub.astro"
import SocialPill from "@/components/SocialPill.astro"
import LinkIcon from "@/components/icons/Link.astro"
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16"
      src="/luli.jpeg"
      alt={personalImageAlt}
    />
    <a
      href="https://linkedin.com/in/lutriana"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Disponible para trabajar</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    ¡Hola! soy Luisa
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-pink-200 [&>strong]:text-pink-500 [&>strong]:font-semibold dark:text-gray-300"
  >
    Estudiante de <strong
      >Ingenieria de Sistemas y Computación</strong
    > en la Universidad Tecnológica de Bolívar.
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:lutrigra@gmail.com">
      <MailIcon class="size-4" />
      lutrigra@gmail.com
    </SocialPill>
    <SocialPill href="https://linkedin.com/in/lutriana">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
    <SocialPill href="https://github.com/lutriana">
      <GitHubIcon class="size-4" />
      GitHub
    </SocialPill>
    <SocialPill href="https://drive.google.com/file/d/1jnD4KjczwlL6xPQFsnUOUjG9nq0_n-pf/view?usp=sharing">
      <LinkIcon class="size-4" />
      CV
    </SocialPill>
  </nav>
</div>
